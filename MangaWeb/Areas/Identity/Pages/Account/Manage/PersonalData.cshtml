@page
@model PersonalDataModel
@{
    ViewData["Title"] = Model.UIValuesManager.PersData;
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-6">
        <p>@Model.UIValuesManager.PersDataDesc</p>
        <p>
            <strong>@Model.UIValuesManager.PersDataDelDesc</strong>
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post">
            <button class="btn btn-primary" type="submit">@Model.UIValuesManager.Download</button>
        </form>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger">@Model.UIValuesManager.Delete</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
