@page
@model PersonalDataModel
@{
    ViewData["Title"] = Model.Localizer["PersData"].Value;
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-6">
        <p>@Model.Localizer["PersDataDesc"].Value</p>
        <p>
            <strong>@Model.Localizer["PersDataDelDesc"].Value</strong>
        </p>
        <form id="download-data" asp-page="DownloadPersonalData" method="post">
            <button class="btn btn-primary" type="submit">@Model.Localizer["Download"].Value</button>
        </form>
        <p>
            <a id="delete" asp-page="DeletePersonalData" class="btn btn-danger">@Model.Localizer["Delete"].Value</a>
        </p>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
