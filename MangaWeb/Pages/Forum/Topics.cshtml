@page
@model MangaWeb.Pages.ForumModel
@{
}
<h3>Create Topic</h3>
<form method="post">
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <label asp-for="Topic.Title"></label>
        <input asp-for="Topic.Title" class="form-control" />
        <span asp-validation-for="Topic.Title"></span>
    </div>
    <div class="form-group">
        <label asp-for="Topic.Description"></label>
        <input asp-for="Topic.Description" class="form-control" />
        <span asp-validation-for="Topic.Description"></span>
    </div>
    <br />
    <input asp-page-handler="CreateTopic" class="w-15 btn btn-lg btn-primary" type="submit" value="Create">
</form>
<br />
<h2>Topics</h2>
@foreach (var topic in Model.Topics)
{
    <div class="forumItem">
        <a asp-page="Posts" asp-route-id="@topic.Id">@topic.Title</a> 
        <h5>@topic.Description</h5>
        
        by  <img class="headerImage" src="@topic.AuthorImgSrc" />  @topic.AuthorName on @topic.CreatedAt.ToString("yyyy-MM-dd")
    </div>
}


