@page
@model MangaWeb.Pages.Manga_s_.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Manga</h4>
<hr />

    @if(TempData["AlertMessage"] != null)
    {
        <div class="alert alert-danger" style="font-size: 20px;font-weight:600;">
        <strong>Fail </strong>
        @TempData["AlertMessage"] 
        </div>
    }
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Manga.Id" />
            <div class="form-group">
                <label asp-for="Manga.Title" class="control-label"></label>
                <input asp-for="Manga.Title" class="form-control" />
                <span asp-validation-for="Manga.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Manga.CreatedDate" class="control-label"></label>
                <input asp-for="Manga.CreatedDate" class="form-control" />
