            </div>
            <div class="form-group">
                <label asp-for="Manga.Genre" class="control-label"></label>
                <input asp-for="Manga.Genre" class="form-control" />
                <span asp-validation-for="Manga.Genre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Manga.Description" class="control-label"></label>
                <input asp-for="Manga.Description" class="form-control" />
                <span asp-validation-for="Manga.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Manga.ReadSiteUrl" class="control-label"></label>
