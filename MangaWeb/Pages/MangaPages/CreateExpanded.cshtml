@page
@model MangaWeb.Pages.MangaPages.CreateExpandedModel
@{
    ViewData["Title"] = "Create auto";
}

@if (!string.IsNullOrEmpty(Model.ServerUnavailableMessage))
{
    <partial name="../Areas/Identity/Pages/Account/_StatusMessage" model="Model.ServerUnavailableMessage" />
}

<h2>@Model.Localizer["EnterMangaTitle"].Value</h2>
<form method="post">
 <div asp-validation-summary="ModelOnly" class="text-danger"></div>
<input class="form-control"  asp-for="MangaTitleInput" type="text" />
 <span asp-validation-for="MangaTitleInput" class="text-danger"></span>
 <br />
    <label asp-for="IsRussian">@Model.Localizer["YouWantRuManga"].Value</label>
 <br />
  <input class="generCheckBox" style="z-index:100;opacity:100;" asp-for="IsRussian" type="checkbox" />
     
    <hr />
<input class="w-100 btn btn-lg btn-primary" type="submit" value="Create" />
</form>